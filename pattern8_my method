	void printTriangle(int n) {
	    // code here
	    int k=n;
	    for(int i=0;i<n;i++)//loop for print n rows
	    {
	        //loop for space
	       for(int j=i;j>0;j--)
	       {
	           cout<<" ";
	       }
	       for(int j=2*k-1;j>=1;j--)//loop for *
	       {
	           cout<<"*";
	           
	       }
	       k--;
	       //loop for space
	       for(int j=i;j>0;j--)
	       {
	           cout<<" ";
	       }
	       cout<<"\n";
	       
	       
	    }
	}
